{
  "manifest_version": 3,
  "name": "New McGill Chrome Extension",
  "version": "0.1.0",
  "description": "My New McGill Chrome Extension Test",
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "McGill Chrome Extension"
  },
  "permissions": [
    "storage","activeTab","scripting"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://developer.chrome.com/docs/extensions/*",
        "https://developer.chrome.com/docs/webstore/*",
        "https://www.mcgill.ca/*"
      ],
      "run_at": "document_idle",
      "js": ["content.js"],
      "css": ["popup.css"]
    }
  ]
}